<% if notice %>
<p id="notice"><%= notice %> </p>
<% end %>
<div class="store">
<h1>Your Store Front</h1>

<% @products.each do |product| %>
<div class="entry">
  <%= image_tag product.image_url %>
  <h3> <%= product.title %> </h3>
  <p> <%= sanitize(product.description) %> </p>
  <div class="print_line">
    <span class="price"><%= number_to_currency(product.price) %></span>
  </div>
</div>
<% end %>
</div>
